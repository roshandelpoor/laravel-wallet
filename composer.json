{
    "name": "roshandelpoor/laravel-wallet",
    "description": "Laravel wallet enables you to effortlessly increase and decrease the wallet balance for each user, as well as retrieve their current wallet balance, freeing you to concentrate on developing your application's core features.",
    "keywords": [
        "laravel",
        "wallet",
        "laravel-wallet",
        "laravel wallet",
        "laravel wallet package",
        "e-commerce"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "homepage": "https://github.com/roshandelpoor/laravel-wallet",
    "authors": [
        {
            "name": "roshandelpoor",
            "email": "mohammad.roshandelpoor@gmail.com",
            "role": "author",
            "homepage": "https://github.com/roshandelpoor"
        },
        {
            "name": "roshandelpoor",
            "role": "owner",
            "homepage": "https://github.com/roshandelpoor"
        }
    ],
    "autoload": {
        "psr-4": {
            "Roshandelpoor\\LaravelWallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "pestphp/pest-plugin-laravel": "^1.4.0|^2.0.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html ./coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Roshandelpoor\\LaravelWallet\\Providers\\LaravelWalletServiceProvider"
            ]
        }
    }
}
